<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#242222"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/et11"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:backgroundTint="#A9A9A9"
        android:ems="10"
        android:hint="x"
        android:inputType="number"
        android:textColorHint="#666161" />

    <EditText
        android:id="@+id/et22"
        android:layout_width="match_parent"
        android:layout_height="73dp"
        android:backgroundTint="#A9A9A9"
        android:drawableTint="#FFFFFF"
        android:ems="10"
        android:hint="y"
        android:inputType="number"
        android:shadowColor="#FFFFFF"
        android:textColorHint="#666161" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bt01"
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#FF9800"
            android:onClick="addition"
            android:text="+" />

        <Button
            android:id="@+id/button2"
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#FF9800"
            android:onClick="substraction"
            android:text="-" />

        <Button
            android:id="@+id/button3"
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#FF9800"
            android:onClick="multiplication"
            android:text="*" />

        <Button
            android:id="@+id/button4"
            android:layout_width="108dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#FF9800"
            android:onClick="division"
            android:text="/" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#FF9800"
            android:onClick="factorial"
            android:text="x!" />

        <Button
            android:id="@+id/button5"
            android:layout_width="77dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#FF9800"
            android:onClick="exponential"
            android:text="x^y" />

        <Button
            android:id="@+id/sen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#FF9800"
            android:onClick="sen"
            android:text="Sen(x)" />

        <Button
            android:id="@+id/cos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#FF9800"
            android:onClick="cos"
            android:text="Cos(x)" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#FF9800"
            android:onClick="reversal"
            android:text="Reverse (x)" />

        <Button
            android:id="@+id/button7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#FF9800"
            android:onClick="sqroot"
            android:text="âˆšx" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv11"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>